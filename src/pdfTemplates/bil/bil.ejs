        <div class="flex gap-4 flex-wrap">
          <p>
            <strong>GSTIN:</strong> ..........................................
          </p>
          <p><strong>State:</strong> ..................................</p>
          <p><strong>State Code:</strong> ..................</p>
        </div>
      </div>

      <!-- Charges Table -->
      <table
        class="w-full border border-black mt-6 text-[11px] table-fixed text-center"
      >
        <thead class="bg-gray-100">
          <tr>
            <th class="border border-black py-1 w-[5%]">S. No.</th>
            <th class="border border-black py-1 w-[15%]">G.R. No.</th>
            <th class="border border-black py-1">PARTICULAR</th>
            <th class="border border-black py-1 w-[15%]">Amount<br />Rs.</th>
            <th class="border border-black py-1 w-[5%]">R.</th>
          </tr>
        </thead>
        <tbody>
          <!-- Rows -->
          <tr>
            <td class="border border-black">1</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">
              Transportation Charges
            </td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">2</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">Packing Charges</td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">3</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">Loading Charges</td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">4</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">
              Unloading Charges
            </td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">5</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">
              Unpacking Charges
            </td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">6</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">
              Warehouse / Storage Charges
            </td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">7</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">
              Insurance Charges
            </td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">8</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">S.T. Charges</td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
          <tr>
            <td class="border border-black">9</td>
            <td class="border border-black"></td>
            <td class="border border-black text-left pl-2">
              Green Tax / Toll Tax / Other Charges
            </td>
            <td class="border border-black"></td>
            <td class="border border-black"></td>
          </tr>
        </tbody>
      </table>

      <!-- Totals -->
      <div class="grid grid-cols-2 mt-4 gap-4 text-sm">
        <div>
          <p><strong>Rupees In Words:</strong></p>
          <div class="border border-black h-10 mt-1"></div>
        </div>
        <div>
          <table class="w-full border border-black text-[11px]">
            <tr>
              <td class="border border-black px-2">Total</td>
              <td class="border border-black px-2 w-1/3"></td>
            </tr>
            <tr>
              <td class="border border-black px-2">
                Add CGST@ ....................%
              </td>
              <td class="border border-black px-2"></td>
            </tr>
            <tr>
              <td class="border border-black px-2">
                Add SGST@ ....................%
              </td>
              <td class="border border-black px-2"></td>
            </tr>
            <tr>
              <td class="border border-black px-2">
                Add IGST@ ....................%
              </td>
              <td class="border border-black px-2"></td>
            </tr>
            <tr>
              <td class="border border-black px-2 font-semibold">
                Grand Total
              </td>
              <td class="border border-black px-2"></td>
            </tr>
          </table>
        </div>
      </div>

      <!-- Bank Details -->
      <div class="border border-black mt-4 grid grid-cols-2 text-[11px]">
        <div class="bg-gray-100 font-semibold px-2 py-1">Bank Details</div>
        <div class="px-2 py-1">
          <p><strong>Bank Name:</strong> Kotak Mahindra Bank</p>
          <p><strong>Branch:</strong> Jagriti Enclave, Delhi</p>
          <p><strong>A/c No.:</strong> 6912013220</p>
          <p><strong>IFSC Code:</strong> KKBK0004584</p>
        </div>
      </div>

      <!-- Terms & Receiver -->
      <div class="grid grid-cols-2 mt-4 text-[11px] gap-4">
        <div>
          <p class="font-semibold underline">E.& O. E.</p>
          <p><strong>Terms & Conditions</strong></p>
          <ol class="list-decimal pl-4 space-y-1">
            <li>Goods once sold will not be taken back.</li>
            <li>All Disputes subject to DELHI Jurisdiction only.</li>
          </ol>
        </div>
        <div class="border border-black p-2 text-center">
          <p><strong>Receiver Signature</strong></p>
          <div class="h-10 mt-2 border-b border-black w-full"></div>
          <p class="text-left mt-2">
            Contact No. ......................................
          </p>
        </div>
      </div>

      <!-- Footer -->
      <div
        class="mt-4 border border-black p-2 text-right text-[12px] font-semibold"
      >
        <div
          class="text-center text-red-600 border border-red-600 w-fit px-4 mx-auto mb-2"
        >
          For JUST PACKERS MOVERS<br />& TRANSPORT COMPANY
        </div>
        <p class="text-sm font-normal">Authorised Signatory</p>
      </div>
    </div>
